{
  "name": "@gravity-ai/api",
  "version": "1.0.0",
  "description": "Gravity AI - FastAPI Service for Cloud Run",
  "private": true,
  "scripts": {
    "dev": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "test": "python -m pytest",
    "test:watch": "python -m pytest --watch",
    "lint": "python -m flake8 . && python -m black --check .",
    "format": "python -m black .",
    "type-check": "python -m mypy .",
    "clean": "find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete"
  },
  "engines": {
    "python": ">=3.11"
  }
}
